<button class="btn @bootstrapClass" @onclick="OnClick" type="@buttonType" >@ChildContent</button>

@code {
    [Parameter] public BootstrapButtonType ButtonType { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public bool IsSubmit { get; set; }

    string bootstrapClass => ButtonType switch
    {
        BootstrapButtonType.Primary => "btn-primary",
        BootstrapButtonType.Success => "btn-success",
        BootstrapButtonType.Warning => "btn-warning",
        BootstrapButtonType.Danger => "btn-danger"
    };

    string buttonType => IsSubmit ? "submit" : "button";
}
